{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ song.title }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ song.artist }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ song.album }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('index_song') }}">back to list</a>

    <a href="{{ path('edit_song', {'id': song.id}) }}">edit</a>

    <a href="{{ asset('upload/song/' ~ song.songFileName) }}" Download>Download Song</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
