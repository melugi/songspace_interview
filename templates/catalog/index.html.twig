{% extends 'base.html.twig' %}

{% block title %}Catalog index{% endblock %}

{% block body %}
    <h1>Catalog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for catalog in catalogs %}
            <tr>
                <td>{{ catalog.id }}</td>
                <td>{{ catalog.title }}</td>
                <td>
                    <a href="{{ path('show_catalog', {'id': catalog.id}) }}">show</a>
                    <a href="{{ path('edit_catalog', {'id': catalog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('new_catalog') }}">Create new</a>
{% endblock %}
